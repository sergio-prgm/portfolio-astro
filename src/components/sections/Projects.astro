---
import colors from "../Vars.mjs";
const {clrAccent} = colors
---

<ul role="list" class="projects--grid" id="projects">
  <slot />
</ul>

<style define:vars={{ clrAccent }}>
	.projects--grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(30ch, 1fr));
		gap: 2.5rem;
		padding: 0;
    margin-top: 1.25rem;
	}

</style>
