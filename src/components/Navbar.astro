<header class="primary-header">
  <a href="#" class="logo">
    <img src="/assets/Logo/LogoRecurso 1.png" alt="Sergio Esteve Logo" width="60" height="60">
  </a>

  <button class="mobile-nav-toggle" id="mobile-nav-toggle" aria-controls="primary-navigation" aria-expanded="false">
    <span>-</span>
  </button>

  <nav >
    <ul data-visible="false" id="primary-navigation" class="primary-navigation flex">
      <li>
        <a href="#about" class="f-bold t-medium">About</a>
      </li>
      <li>
        <a href="#projects" class="f-bold t-medium">Projects</a>
      </li>
      <li>
        <a href="#contact" class="f-bold t-medium">Contact</a>
      </li>
    </ul>
  </nav>
  <script src="/scripts/navigation.js" defer></script>
</header>

<style>
  header {
    display: flex;
    position: fixed;
    width: 100vw;
    align-items: center;
    justify-content: space-between;
    z-index: 999;
    top: 0;
  }

  .logo {
    margin: 2rem;
  }

  .mobile-nav-toggle {
    display: none;
  }

  .primary-navigation {
    display: flex;
    gap: 3rem;
    margin-right: 4rem;
    background-color: hsl(0 0% 98% / 0.8);
  }

  .primary-navigation::after {
    content: '';
    height: 5px;
    background-color: black;
    top: 2.5rem;
    right: -20rem;
    left: -4ch;
    position: absolute;
  }
  @supports (backdrop-filter: blur(1rem)) {
    .primary-navigation {
      background: hsla(0, 0%, 98%, 0.7);
      backdrop-filter: blur(0.3rem);
    }
  }

  @media (max-width: 35em) {
    .primary-navigation {
      margin: 0;
      gap: 2em;

      position: fixed;
      z-index: 100;
      inset: 0 0 0 0;

      flex-direction: column;
      padding: min(30vh, 10rem) 2em;

      transform: translateX(100%);
      transition: transform 350ms cubic-bezier(0.1, 0.91, 0.96, 0.93);
    }

    .primary-navigation[data-visible='true'] {
      transform: translateX(0%);
    }

    .mobile-nav-toggle {
      display: block;
      position: absolute;
      background: #0a0a0a;
      color: #fafafa;
      width: 2rem;
      font-size: 2rem;
      aspect-ratio: 1;
      top: 2rem;
      right: 2rem;
      z-index: 999;
    }

    .mobile-nav-toggle {
      /* background-image: url(/favicon.ico); */
      background-color: transparent;
    }
  }
</style>