<style define:vars={{ clrPrimary }}>
  footer {
    border-top: 2px solid var(--clrPrimary);
    padding-block: 1.5rem;
  }
  .footer-content {
    display: flex;
    justify-content: space-between;
    align-items: center;
    max-width: 45ch;
    width: min(45ch, 90vw);
    margin-inline: auto;
  }

  .footer-logo {
    display: flex;
    flex-direction: row;
    gap: 1rem;
  }

  .footer-logo > div {
    max-width: 7ch;
    line-height: 1;
    font-size: 20px;
    font-weight: 600;
    letter-spacing: -.5px;
  }

  footer span {
    margin-inline: auto;
    font-size: 24px;
  }

  .footer-contact {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    font-weight: 600;
  }

  .footer-icons {
    display: flex;
    gap: 1.5rem;
    justify-content: space-around;
    align-items: center;
  }

  .footer-icons > a,
  .footer-icons > button {
    width: 100%
  }

</style>
